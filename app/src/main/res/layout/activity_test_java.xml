<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java测试页面"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/java_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java匿名内部类按钮"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/java_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java方法引用按钮"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/java_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java Lambda按钮"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试说明：\n1. 点击按钮查看Toast消息\n2. 观察Logcat中的ActionLog输出\n3. 验证字节码插桩是否生效"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:background="#f0f0f0"
        android:padding="10dp" />

</LinearLayout>
