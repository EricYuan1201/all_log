<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin测试页面"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/kotlin_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin Lambda按钮"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/kotlin_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 简化Lambda按钮"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/kotlin_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 方法引用按钮"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/kotlin_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 匿名对象按钮"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试说明：\n1. 点击按钮查看Toast消息\n2. 观察Logcat中的ActionLog输出\n3. 验证Kotlin各种语法的插桩效果"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:background="#f0f0f0"
        android:padding="10dp" />

</LinearLayout>
